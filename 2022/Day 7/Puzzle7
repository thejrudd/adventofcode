# Opens puzzle input file and reads through it line by line until the file finishes.

class ElfFile:
    def __init__(self, fileName, fileSize, childFiles):
        self.fileName = fileName
        self.fileSize = fileSize
        self.childFiles = []
    
    def add_item(self, item):
        self.childFiles.append(item)

file = ElfFile("b.txt", 14848514, "f")

my_list = ['item1', 'item2', 'item3']

for item in my_list:
    file.add_item(item)

print(file.childFiles)

